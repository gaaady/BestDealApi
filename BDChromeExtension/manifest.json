{
  "manifest_version": 2,

  "name": "bestdeal-dev",
  "version": "1.0",
  "description": "Suggest a better hotel deal",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["main.css"],
      "js": ["jquery.min.js","main.js"]
    }
  ],
  
  "permissions": [
  "tabs",
  "https://blooming-cliffs-1855.herokuapp.com/*"
  ]
}